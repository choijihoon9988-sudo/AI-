rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // prompts 컬렉션에 대한 규칙
    match /prompts/{promptId} {
      // 사용자는 자신의 프롬프트만 읽고, 생성하고, 수정하고, 삭제할 수 있습니다.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}